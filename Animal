using System;

public abstract class Animal
{
    public string Name { get; set; }
    
    public abstract void makeSound();
}

public class Dog : Animal
{
    public Dog()
    {
        Name = "Dog";
    }

    public override void makeSound()
    {
      Console.WriteLine($"{Name}: Arf! Arf!");
    }
}
public class Cat : Animal
{
    public Cat()
    {
        Name = "Cat";
    }

    public override void makeSound()
    {
        Console.WriteLine($"{Name}: Meow! Meow!");
    }
}

public class Snake : Animal
{
    public Snake()
    {
        Name = "Snake";
    }

    public override void makeSound()
    {
        Console.WriteLine($"{Name}: Hiss! Hiss!");
    }
}
public class Dinosaur : Animal
{
    public Dinosaur ()
    {
        Name = "Dinosaur";
    }

    public override void makeSound()
    {
        Console.WriteLine($"{Name}: Roar! Roar!");
    }
}

public class PolymorphismDemo
{
    public static void Main(string[] args)
    {
        Animal myDog = new Dog();
        Animal myCat = new Cat();
        Animal mySnake = new Snake();
        Animal myTiger = new Dinosaur ();

        myDog.makeSound();       // Outputs: Dog: Woof! Woof!
        myCat.makeSound();       // Outputs: Cat: Meow! Meow!
        mySnake.makeSound();     // Outputs: Snake: Hiss! Hiss
